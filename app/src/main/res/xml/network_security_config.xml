<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 모든 cleartext (HTTP) 통신 허용 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- 기본 인증서 신뢰 -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- 로컬 개발을 위한 사설 IP 대역 허용 -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- 로컬호스트 -->
        <domain includeSubdomains="true">localhost</domain>
        
        <!-- 에뮬레이터용 -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        
        <!-- 192.168.x.x 대역 (가장 일반적인 사설 IP) -->
        <domain includeSubdomains="true">192.168.1.100</domain>
        <domain includeSubdomains="true">192.168.0.100</domain>
        <domain includeSubdomains="true">192.168.10.100</domain>
        <domain includeSubdomains="true">192.168.10.190</domain>
        <domain includeSubdomains="true">192.168.99.70</domain>
        
        <!-- 172.16.0.0~172.31.255.255 대역 (Class B 사설 IP) -->
        <domain includeSubdomains="true">172.30.1.99</domain>
    </domain-config>
</network-security-config>